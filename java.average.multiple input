package Main; 

import java.util.Scanner;

public class AverageCalculator {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
	
		double num; 
		int sum = 0;
		int count = 0; 
		
		while(true) {
			System.out.print("Enter number (or -1 to finish): ");
			
			if (input.hasNextDouble()) {
				num = input.nextDouble();
			
				if(num == -1) {
					System.out.println(" Input finished. Calculating results...");
					break; 
				}
				
				sum += num;
				count++;
			} else {
			
				System.out.println("⚠️ Invalid input! Please enter a whole number.");
				
			}
		} 
		
		System.out.println("--- Final Results ----");

		if(count > 0) {
			
			double average = sum / count ;
			System.out.println("Total numbers entered: " + count );
			System.out.println("Total sum is: " + sum);
			
			System.out.println("The average value is: "+average);
		} else {
			System.out.println(" No valid numbers were entered to calculate an average.");
		}
		
	}
} 
