package Main;
import java.util.Scanner;

public class Gpt_result {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        double rate = 8.5;

        System.out.print("Enter the number of employees: ");
        int numEmployees = input.nextInt();

        for (int i = 1; i <= numEmployees; i++) {
            System.out.print("Enter hours worked last week for employee " + i + ": ");
            int hour = input.nextInt();

            int overtime = 0;
            double grosspay;

            if (hour <= 40) {
                grosspay = hour * rate;
            } else {
                overtime = hour - 40;
                grosspay = (40 * rate) + (overtime * rate * 1.5);
            }

            System.out.println("-----------------------------------");
            System.out.println("Employee " + i);
            System.out.println("Total hours worked: " + hour);
            System.out.println("Overtime hours: " + overtime);
            System.out.println("Gross pay: $" + grosspay);
            System.out.println("-----------------------------------");
        }

        input.close();
    }
}
